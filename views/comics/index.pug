extends ../layouts/common.pug
block content
	- var maxLength = 100;
	h1 Comics
	.text-align-center.d-flex
		form(action="/comics/search", method="GET", class="d-flex")
			input(id="input-field", type="text",name="q", class="form-control")
			button(class="btn btn-primary ml-2") Search
	.row
		each comic in comics
			.col-sm-3
				.card.text-center(style='width: 14rem;')
					img.card-img-top(src=comic.image, alt='img')
					.card-body
						h5.card-title=comic.name
						p.card-text=(comic.description.length > maxLength ? comic.description.substring(0, maxLength) + "..." : comic.description)  
						a.btn.btn-primary(href="/comics/" + comic._id, style='color: white') Watch