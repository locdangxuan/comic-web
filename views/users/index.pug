extends ../layouts/common.pug
block content
	h1 
		span.mr-3 User
		a.btn.btn-primary(href="/users/create") new
	.d-flex.align-items-center
		form.ml-auto(action="/users/search/", method="GET", class="d-flex")
			input(id="input-field", type="text", name="q", class="form-control")
			button(class="btn btn-primary ml-2") Search
	table.table
		tr
			th firstName
			th lastName
			th Phone
			th Action
		each user in users
			tr 
				td=user.firstName
				td=user.lastName 
				td=user.phoneNumber
				td
					a.btn.btn-light(href="/users/" + user._id) View
	
